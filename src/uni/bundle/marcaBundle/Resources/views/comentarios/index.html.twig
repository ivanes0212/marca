{% extends 'uniMarcaBundle::layout.html.twig' %}

{% block cuerpo %}
    <h1>comentarios list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombrecom</th>
                <th>Desccom</th>
                <th>Fechacom</th>
                <th>Nickcom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('comentarios_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreCom }}</td>
                <td>{{ entity.descCom }}</td>
                <td>{% if entity.fechaCom %}{{ entity.fechaCom|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.nickCom }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('comentarios_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('comentarios_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('comentarios_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
